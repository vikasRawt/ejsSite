<% layout("/layouts/boilerplate")%>
  <body>
    <h3>All Listings</h3>
    <div class="row row-cols-lg-4 row-cols-md-2 row-cols-sm-1">
      <% for(let lists of houseList){ %>
        <a href="/list/<%=lists._id%>" class="lists-link">
        <div class="card col">
          <img src="<%= lists.image.url %>" class="card-img-top" style="height:20rem" alt="img-house">
          <div class="card-body">
            <h5 class="card-title"><%= lists.title %></h5>
            <p class="card-text">&#8377;
              <%= lists.price.toLocaleString("en-IN") %>/night
              </p>
          </div>
        </div>
      </a>
        <% }%>
    </div>
  </body>
